{% comment %} main-hero-section.liquid {% endcomment %}

{% if section.settings.layout == "layout_1" %}
    {{ 'index-hero-section-main.css' | asset_url | stylesheet_tag }}
  {% elsif section.settings.layout == "layout_2" %}
    {{ 'index-hero-section-layout-two.css' | asset_url | stylesheet_tag }}
  {% elsif section.settings.layout == "layout_3" %}
    {{ 'index-hero-section-layout-three.css' | asset_url | stylesheet_tag }}
  {% elsif section.settings.layout == "layout_4" %}
    {{ 'index-hero-section-layout-four.css' | asset_url | stylesheet_tag }}
  {% endif %}
  
  <!-- Layout 1 -->
  <div id="full-blend-hero-section" class="layout1hero" style="display: {% if section.settings.layout == 'layout_1' %}block{% else %}none{% endif %}">
    <div class="hero-content">
    <!-- Desktop View -->
    <div class="hero-desktop" style="background-image: url('{{ section.settings.desktop_bg_image | img_url: 'master' }}');">
      <div class="container">
        <div class="hero-text">
          <h1>{{ section.settings.hero_title }}</h1>
          <p>{{ section.settings.hero_description }}</p>
          <div class="hero-btns">
            <a href="{{ section.settings.button_url }}" class="btn">{{ section.settings.button_text }}
                {% render 'green-arrow' %}
            </a>
          </div>
        </div>
       
      </div>
    </div>

    <!-- Mobile View -->
    <div class="hero-mobile" style="background-image: url('{{ section.settings.mobile_bg_image | img_url: 'master' }}');">
      <div class="container">
        <div class="hero-text">
          <h1>{{ section.settings.hero_title }}</h1>
          <p>{{ section.settings.hero_description }}</p>
          <div class="hero-btns">
            <a href="{{ section.settings.button_url }}" class="btn">{{ section.settings.button_text }}
                {% render 'green-arrow' %}
            </a>
          </div>
        </div>
        
      </div>
    </div>
  </div>
  </div>
  
  <!-- Layout 2 -->
 <div id="splited-image-hero-layout-2" style="display: {% if section.settings.layout == 'layout_2' %}block{% else %}none{% endif %}">
  <div class="hero-content">
    <!-- Desktop View -->
    <div class="hero-desktop" style="background-image: url('{{ section.settings.desktop_bg_image_2 | img_url: 'master' }}');">
      <div class="page-width">
        <div class="hero-text text-{{ section.settings.text_alignment_2 }}">
          <h1>{{ section.settings.hero_title_2 }}</h1>
          <p>{{ section.settings.hero_description_2 }}</p>
          <div class="hero-btns">
            <a href="{{ section.settings.button_url_2 }}" class="btn">{{ section.settings.button_text_2 }}
              {% render 'green-arrow' %}
            </a>
          </div>
        </div>
        <div class="hero-product-texts">
        {% if section.settings.product_image_desktop %}
            <div class="hero-product-img">
                <img src="{{ section.settings.product_image_desktop | img_url: 'master' }}" alt="image">
            </div>
        {% endif %}
       
        <div class="hero-slides">
            <div class="swiper hero-slide-inner">
                <div class="swiper-wrapper">
                    {% for block in section.blocks %}
                        <div class="swiper-slide">
                            <div class="slide-flex-inners">
                                {% if block.settings.slide_text != blank %}
                                    <div class="slide-txt-data">
                                        <p>{{ block.settings.slide_text }}</p>
                                    </div>
                                {% endif %}
        
                                {% if block.settings.slide_image %}
                                    <div class="slide-img-data">
                                        <img src="{{ block.settings.slide_image | img_url: 'master' }}" alt="{{ block.settings.image_alt }}">
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
        </div>
        
      </div>
    </div>

    <!-- Mobile View -->
    <div class="hero-mobile" style="background-image: url('{{ section.settings.mobile_bg_image_2 | img_url: 'master' }}');">
      <div class="">
        <div class="hero-text text-{{ section.settings.text_alignment_2 }}">
          <h1>{{ section.settings.hero_title_2 }}</h1>
          <p>{{ section.settings.hero_description_2 }}</p>
          <div class="hero-btns">
            <a href="{{ section.settings.button_url_2 }}" class="btn">{{ section.settings.button_text_2 }}
              {% render 'green-arrow' %}
            </a>
          </div>
        </div>
        <div class="hero-product-texts">
        {% if section.settings.product_image_mobile %}
            <div class="hero-product-img">
                <img src="{{ section.settings.product_image_mobile | img_url: 'master' }}" alt="image">
            </div>
        {% endif %}
	<div class="hero-slides">
            <div class="swiper hero-slide-inner">
                <div class="swiper-wrapper">
                    {% for block in section.blocks %}
                        <div class="swiper-slide">
                            <div class="slide-flex-inners">
                                {% if block.settings.slide_text != blank %}
                                    <div class="slide-txt-data">
                                        <p>{{ block.settings.slide_text }}</p>
                                    </div>
                                {% endif %}
        
                                {% if block.settings.slide_image %}

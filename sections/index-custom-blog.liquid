{
  "name": "custom blog  Slider",
  "settings": [
    
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "One Tool, Lots of Benefits."
    },
    {
      "type": "textarea",
      "id": "subheading",

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

{%- endstyle -%}
{% style %}
.benefits-slider-section  .swiper-button-next:after , .swiper-button-prev:after{
    display:none;
  }
 .benefits-slider-section .swiper-button-next svg, .swiper-button-prev svg{
    width:20px; height:20px;
  }
  .benefits-slider-section .swiper-button-prev svg{ transform:rotate(0deg);
}
.benefits-slider-section .main_heading { 
  color: #000;
  font-family: Cellofy;
  font-size: 40px;
  font-style: normal;
  font-weight: 600;
  line-height: 100%;
  letter-spacing: -0.8px; 
}
.has-nav-wrapper {
    position: relative;
}
  /* Ensure the slider container has relative positioning */
.benefits-slider-section .slider-container {
  position: relative;
  width: 100%;
  height: auto;
  margin-top: 30px;
  overflow-y: auto;
  overflow-x: hidden;
}
.benefits-slider-section .slider-container .benefits-slider .benefits-slider-swiper {
  overflow: visible;
}
/* Position navigation arrows */
.benefits-slider-section .slider-navigation {
  position: absolute;
  top: -14%;
  right: 9%; /* Adjust the distance from the right edge as needed */
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.benefits-slider-section .swiper-button-prev {
  margin-bottom: 10px; /* Space between the buttons */
}

.benefits-slider-section .benefits-slider {
  position: relative;
}
.benefits-slider-section .swiper-button-prev{ left:-60px;}
.benefits-slider-section .swiper-button-next{ right:-60px;}


.main-category h5{
    margin: 20px 0 10px;
}
.main-category p{
    color: #6B7981;
    letter-spacing: 0;
    margin: 10px 0;
}
.main-category h3{
    margin-bottom: 5px;
}
.main-category .slider-navigation .nav-btn {
    top: calc(50% - 8.7rem);
}
.main-category .swiper-button-next,.main-category .swiper-button-prev  {
    position: absolute;
    top: var(--swiper-navigation-top-offset, 50%);
    width: calc(var(--swiper-navigation-size) / 44* 27);
    height: var(--swiper-navigation-size);
    margin-top: calc(0px -(var(--swiper-navigation-size) / 2));
    z-index: 10;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 99999999999999;
    background: #009845;
    width: 50px;
    height: 50px;
    border-radius: 100px;
}
  @media screen and (max-width:767px){
    .main-category h5{
      font-size:16px;
      letter-spacing: 0;
    }
    .swiper-wrapper{
      gap: 10px;
    }
    .main-category .subtext  {
        margin: 10px 0;
        font-size: 16px;
        font-weight: 400;
        letter-spacing: 0;
        color: #000;
    }
    .main-category p {
      margin: 10px 0;
      font-size: 14px;
      font-weight: 400;
    }  
  }
  @media screen and (max-width:576px){
    .benefits-slider-section .grid__item{
      max-width:100%;
    }


  }


{% endstyle %}



<div class="main-category Pdp-benefitslider-{{ section.id }}">
<div class="isolate{% unless section.settings.full_width %} page-width1{% endunless %} section-{{ section.id }}">
    <section class=" section-{{ section.id }}-padding">
    <div class="has-nav-wrapper">
        {% if section.settings.heading != blank %}
            <div class="page-width">
                <div class="custom-blog">
                    <h3 class="title left">{{ section.settings.heading }}</h3>
                    <p class="subtext left">{{ section.settings.subheading }}</p>
                </div>
            </div>
        {% endif %}
     
    </div>
    <div class="slider-container">
      <div class="benefits-slider">
        <div class="slider-swiper-blog swiper mySwiper-{{ section.id }}">
          <div class="page-width swiper-wrapper swiper-inner" style="overflow:visible;">
            {% for block in section.blocks %}
                <div class="swiper-slide grid__item" style="background:{{ block.settings.bgcolor }};">
                    <img src="{{ block.settings.image | img_url:'' }}"  loading="lazy" alt="" />
                    <div class="benefits-content">
                        <a href="{{ block.settings.link }}" class="linkonly custom-blog-details">
                        <h5>{{ block.settings.title }}</h5>
                        <div class="tag-view">
                            <span style="background:{{  block.settings.tag1color }};">{{ block.settings.tag1 }}</span>
                            <span style="background:{{  block.settings.tag2color }};">{{ block.settings.tag2 }}</span>
                        </div>
                        </a> 
                    </div>
                </div>
            {%- endfor -%}
          </div>
          <div class="slider-navigation slide-nav">
            <div class="swiper-button-prev nav-btn">
              <svg xmlns="http://www.w3.org/2000/svg" width="12" height="20" viewBox="0 0 12 20" fill="none">
                <path d="M10.375 1.25L1.625 10L10.375 18.75" stroke="#FCFBF7" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
              </svg>
            </div>
          <div class="swiper-button-next nav-btn">
              <svg xmlns="http://www.w3.org/2000/svg" width="12" height="20" viewBox="0 0 12 20" fill="none">
                <path d="M1.625 1.25L10.375 10L1.625 18.75" stroke="#FCFBF7" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>  
</div>  
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

<script>
  var swiper = new Swiper(".slider-swiper-blog", {
    slidesPerView: 1,
    spaceBetween: 0,
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    breakpoints: {
      0: {
        slidesPerView: 1,
        spaceBetween: 10,
      },
      575: {
        slidesPerView: 1,
        spaceBetween: 10,
      },
      750: {
        slidesPerView: 3,
        spaceBetween: 20,
      },
      1000: {
        slidesPerView: 4, // Adjust to show 3.5 columns on larger screens
        spaceBetween: 30,
      },
      1500: {
        slidesPerView: 4, // Consistent with 1000px breakpoint
        spaceBetween: 30,
      },
    },
  });
 
</script>
{% schema %}
{
  "name": "custom blog  Slider",
  "settings": [
    
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "One Tool, Lots of Benefits."
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Trusted in over 60,000 kitchens"
    },
     {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
            "type": "color",
            "id": "bgcolor",
            "label": "background color"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Pro-Grade Capacity"
        },
        {
            "type": "text",
            "id": "tag1",
            "label": "Tag 1"
          },
          {
            "type": "color",
            "id": "tag1color",
            "label": "Tag 1 color"
          },
          {
            "type": "text",
            "id": "tag2",
            "label": "Tag 2"
          },
          {
            "type": "color",
            "id": "tag2color",
            "label": "Tag 2 color"
          },
        {
            "type": "url",
            "id": "link",
            "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "custom blog Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
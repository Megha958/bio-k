{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .index-power-banner  section.power-sec {
    background-image: url('{{section.settings.mobileimagebg | img_url:''}}') !important;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .index-power-banner  section.power-sec {
      background-image: url('{{section.settings.imagebg | img_url:''}}') !important;
    }
  }
{%- endstyle -%}

<section class="power-sec index-power-banner color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
    <div class="power-inner">
      <div class="page-width">
        <div class="power-grid">
          <div class="power-left">
            {% for block in section.blocks %}
                {%- case block.type -%}
                {%- when 'card' -%}
                <div class="power-card power-card-{{ block.settings.card_class }}">
                    <span class="power-span">{{ block.settings.card_number }}</span>
                    <p class="power-card-para">{{ block.settings.card_text }}</p>
                </div>
            {% endcase %}
            {% endfor %}
          </div>
          <div class="power-right">
            <div class="section-title">
              <h2 class="power-head">{{ section.settings.heading }}</h2>
              <p class="power-para">{{ section.settings.description }}</p>
            </div>
            <div class="faq-section-banner">
            {% for block in section.blocks %}
                {%- case block.type -%}
                {%- when 'faq' -%}
                {% if block.settings.question != blank %}
                <div class="faq-item second">
                    <div class="faq-question second">
                        <div class="faq-data">
                          <h6>
                            {% if block.settings.faqicon != blank %}
                              <img src="{{ block.settings.faqicon | img_url:'20x' }}">
                            {% endif %}
                            {{ block.settings.question }}
                          </h6>
                            <span class="toggle-icon">
                              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path d="M17.5 2.5L2.5 17.5M2.5 2.5L17.5 17.5" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                              </svg>
                            </span>
                        </div>
                    </div>
                    <div class="faq-answer second">
                        <p>{{ block.settings.answer }}</p>
                    </div>
                </div>
                {% endif %}
             {% endcase %}
            {% endfor %}
            </div>
            <a href="{{ section.settings.button_link }}" class="join-btn" style="color: {{ section.settings.button_color }};">
              <span>{{ section.settings.button_text }}</span>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
                <path d="M2 8H14M14 8L8 2M14 8L8 14" stroke="{{ section.settings.button_color }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
.swiper-button-div .swiper-button-prev:hover,
.swiper-button-div .swiper-button-next:hover{
  background: #c3d957;
}
.swiper-button-div .swiper-button-prev,
.swiper-button-div .swiper-button-next{
    background-color: #606d22;
    color: #fcfbf7;
    border-radius: 100px;
    height: 50px;
    width: 50px;
    display: flex;
    z-index: 1;
    align-items: center;
    justify-content: center;
    cursor: pointer;
}
    .index-power-banner  section.power-sec {
      content: "";
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
      background-repeat: no-repeat;
      background-size: cover !important;
    }

    .index-power-banner h6{
      margin:10px 0;
      color: #fff;
    }
    .index-power-banner .faq-answer p{
      margin:10px 0;
      color: #fff;
      font-weight: 300;
      letter-spacing: 0;
    }
    .index-power-banner .toggle-icon svg{
      width: 12px;
      height: 12px;
    }
    .faq-section-banner{
        margin-bottom:20px;
        border-top: 1px solid #fff;
    }
  </style>


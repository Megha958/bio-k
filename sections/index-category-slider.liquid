<div class="custom-slider">
    {% for block in section.blocks %}
      <div class="slider-item">
        <div class="card">
          <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.title }}">
          <div class="card-content">
            <h5>{{ block.settings.title }}</h5>
            <p>{{ block.settings.description }}</p>
            <a href="{{ block.settings.link }}" class="see-products">{{section.settings.button_text}}See Products  {% render 'button-arrow' %}</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  <!-- Add to the <head> section -->
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick.css"/>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick-theme.css"/>

<!-- Add before the closing </body> tag -->
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick.min.js"></script>
  <script>
    $(document).ready(function(){
        var $slider = $('.custom-slider');
        var slideCount = $slider.children().length;
        $slider.slick({
          arrows: slideCount > 5,
          dots: false,
          infinite: true,
          speed: 300,
          slidesToShow: 4,
          slidesToScroll: 1,
          responsive: [
            {
              breakpoint: 768,
              settings: {
                slidesToShow: 2
              }
            },
            {
              breakpoint: 480,
              settings: {
                slidesToShow: 1
              }
            }
          ]
        });
      });
  </script>
  {% schema %}
  {
    "name": "Category Slider",
    "settings": [],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Description"
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button Title"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Category Slider",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}  
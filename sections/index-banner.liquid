      "default": "The Power of Three: Bio-K+'s Revolutionary Probiotic Blend"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Backed by science, proven by results Porem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Discover Our Formula"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#28724F"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Power Card",
      "settings": [
        {
          "type": "text",
          "id": "card_number",
          "label": "Card Number",
          "default": "01"
        },
        {
          "type": "text",
          "id": "card_text",
          "label": "Card Text",
          "default": "Lacticaseibacillus Casei LBC80RÂ®"
        },
        {
          "type": "text",
          "id": "card_class",
          "label": "Card Class",
          "default": "first"
        }
      ]
    },
    {
        "type": "faq",
        "name": "FAQ",
        "settings": [
          {
            "type": "text",
            "id": "question",
            "label": "Question"
          },
          {
            "type": "textarea",
            "id": "answer",
            "label": "Answer"
          }
        ]
      }
  ],
  "presets": [
    {
      "name": "Power Section Image banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
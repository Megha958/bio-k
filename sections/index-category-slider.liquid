{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

{%- endstyle -%}
<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %} section-{{ section.id }}">
<section class=" section-{{ section.id }}-padding">

<div class="main-category custom-slider">
    {% for block in section.blocks %}
      <div class="slider-item">
        <div class="card">
          <img src="{{ block.settings.image | img_url: '' }}" alt="{{ block.settings.title }}">
          <div class="card-content">
            <h5>{{ block.settings.title }}</h5>
            <p>{{ block.settings.description }}</p>
            <a href="{{ block.settings.link }}" class="linkonly see-products">{{section.settings.button_text}}See Products  {% render 'button-arrow' %}</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  </section>
</div>
  <!-- Add to the <head> section -->
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick.css"/>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick-theme.css"/>

<!-- Add before the closing </body> tag -->
 <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick.min.js"></script>
  <script>
    $(document).ready(function(){
        var $slider = $('.custom-slider');
        var slideCount = $slider.children().length;
        $slider.slick({
          arrows: 5,
          dots: false,
          infinite: true,
          speed: 300,
          slidesToShow: 4,
          slidesToScroll: 1,
          responsive: [
            {
              breakpoint: 768,
              settings: {
                slidesToShow: 2
              }
            },
            {
              breakpoint: 480,
              settings: {
                slidesToShow: 1
              }
            }
          ]
        });
      });
  </script>
  <style>
    .main-category h5{
        margin: 20px 0 10px;
    }
    .main-category p{
        color: #6B7981;
        letter-spacing: 0;
        margin: 10px 0;
    }
    </style>
  {% schema %}
  {
    "name": "Category Slider",
    "settings": [
        {
            "type": "checkbox",
            "id": "full_width",
            "default": true,
            "label": "t:sections.rich-text.settings.full_width.label"
        },
        {
            "type": "text",
            "id": "section_title",
            "label": "Section Title"
        },
        {
            "type": "textarea",
            "id": "section_subtitle",
            "label": "Section Subtitle"
        },
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
          },
          {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 40
          },
          {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 52
          }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Description"
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button Title"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Category Slider",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}  
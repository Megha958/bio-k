
<section class="bio-sec">
    <div class="bio-inner">
      <div class="container">
        <div class="bio-main">
          <div class="blog-left">
            <div class="section-title {{ section.settings.desktop_content_alignment }}">
              <h3 class="blog-head">
              {{ section.settings.title }}
              </h3>
              <p class="blog-para">
                  {{ section.settings.details }}
              </p>
            </div>
            <div class="blog-btns">
              <input type="email" name="email" id="email" class="input-contrl" placeholder="Enter Your E-Mail">
              <a href="#" class="join-btn">
                <span>Join Now</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
                  <path d="M2 8H14M14 8L8 2M14 8L8 14" stroke="#009845" stroke-width="2" stroke-linecap="round"
                    stroke-linejoin="round" />
                </svg>
              </a>
            </div>
          </div>
          <div class="blog-right">
            <div class="blog-left-cards small-hide">
              {% for block in section.blocks %}
                {%- case block.type -%}
                {%- when 'card' -%}
                <div class="blog-access">
                  {% if block.settings.svg != blank %}
                    <img src=" {{ block.settings.svg | img_url:'' }}">
                  {% endif %}
                  {% if block.settings.details != blank %}
                    <p class="blog-access-para">{{ block.settings.details }}</p>
                  {% endif %}
                </div>
                <div class="blog-active">
                  {% if block.settings.number != blank %}
                  <p class="blog-active-num">{{ block.settings.number}} </p>
                  {% endif %}
                  {% if block.settings.numbertext != blank %}
                  <p class="blog-active-mem">{{ block.settings.numbertext}}</p>
                  {% endif %}
                </div>
              {% endcase %}
            {% endfor %}
            </div>


            {% for block in section.blocks %}
              {%- case block.type -%}
              {%- when 'card' -%}
              <div class="blog-access medium-hide large-up-hide">
                {% if block.settings.svg != blank %}
                  <img src=" {{ block.settings.svg | img_url:'' }}">
                {% endif %}
                {% if block.settings.details != blank %}
                  <p class="blog-access-para">{{ block.settings.details }}</p>
                {% endif %}
              </div>
            {% endcase %}
          {% endfor %}
          {% for block in section.blocks %}
            {%- case block.type -%}
              {%- when 'card' -%}
              <div class="blog-active medium-hide large-up-hide">
                {% if block.settings.number != blank %}
                <p class="blog-active-num">{{ block.settings.number}} </p>
                {% endif %}
                {% if block.settings.numbertext != blank %}
                <p class="blog-active-mem">{{ block.settings.numbertext}}</p>
                {% endif %}
              </div>
            {% endcase %}
          {% endfor %}
              
           
            {% if section.settings.imagebg != blank %}
            <img class="blog-img" src="{{section.settings.imagebg | img_url:''}}" alt="">
            {% endif %}
            {% for block in section.blocks %}
              {%- case block.type -%}
              {%- when 'card' -%}
            <div class="blog-first medium-hide large-up-hide">
                {% if block.settings.svg != blank %}
                  <img src=" {{ block.settings.svg | img_url:'' }}">
                {% endif %}
                {% if block.settings.details != blank %}
                  <p class="blog-access-para">{{ block.settings.details }}</p>
                {% endif %}
              </div>
            {% endcase %}
          {% endfor %}
            
            {% for block in section.blocks %}
              {%- case block.type -%}
              {%- when 'card' -%}
            <div class="blog-smile medium-hide large-up-hide">
                {% if block.settings.number != blank %}
                  <img src=" {{ block.settings.svg2 | img_url:'' }}">
                {% endif %}
                {% if block.settings.numbertext != blank %}
                <p class="blog-access-para">{{ block.settings.numbertext}}</p>
                {% endif %}
              </div>
            {% endcase %}
          {% endfor %}

            <div class="blog-right-cards small-hide">
              {% for block in section.blocks %}
                {%- case block.type -%}
                {%- when 'card' -%}
                <div class="blog-first">
                  {% if block.settings.svg != blank %}
                    <img src=" {{ block.settings.svg | img_url:'' }}">
                  {% endif %}
                  {% if block.settings.details != blank %}
                    <p class="blog-access-para">{{ block.settings.details }}</p>
                  {% endif %}
                </div>
                <div class="blog-smile">
                  {% if block.settings.number != blank %}
                    <img src=" {{ block.settings.svg2 | img_url:'' }}">
                  {% endif %}
                  {% if block.settings.numbertext != blank %}
                  <p class="blog-access-para">{{ block.settings.numbertext}}</p>
                  {% endif %}
                </div>
              {% endcase %}
            {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
{% schema %}
{
  "name": "Join banner Section",
  "settings": [
    {
        "type": "checkbox",
        "id": "full_width",
        "default": true,
        "label": "t:sections.rich-text.settings.full_width.label"
      },
      {
        "type": "image_picker",
        "id": "imagebg",
        "label": "Image Background"
      },
        {
            "type": "textarea",
            "id": "title",
            "label": "Title Text"
        },
        {
            "type": "textarea",
            "id": "details",
            "label": "Details"
        },
        {
          "type": "select",
          "id": "desktop_content_alignment",
          "options": [
            {
              "value": "left",
              "label": "t:sections.image-banner.settings.desktop_content_alignment.options__1.label"
            },
            {
              "value": "center",
              "label": "t:sections.image-banner.settings.desktop_content_alignment.options__2.label"
            },
            {
              "value": "right",
              "label": "t:sections.image-banner.settings.desktop_content_alignment.options__3.label"
            }
          ],
          "default": "center",
          "label": "Heading Position"
        },
     {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 40
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 52
      }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card1 right",
      "settings": [
        {
          "type": "image_picker",
          "id": "svg",
          "label": "icon",
        },
        {
          "type": "text",
          "id": "details",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "number",
          "label": "Number block"
        },
        {
          "type": "text",
          "id": "numbertext",
          "label": "Text Number"
        }
      
      ]
    },
    {
      "type": "card2",
      "name": "Card 2",
      "settings": [
        {
          "type": "text",
          "id": "card_number",
          "label": "Card Number",
          "default": "01"
        },
        {
          "type": "text",
          "id": "card_text",
          "label": "Card Text",
          "default": "Lacticaseibacillus Casei LBC80RÂ®"
        },
        {
          "type": "text",
          "id": "card_class",
          "label": "Card Class",
          "default": "first"
        }
      ]
    }
   
  ],
  "presets": [
    {
      "name": "Join banner Section"
    }
  ]
}
{% endschema %}
{% comment %}
  Add this to your theme's assets or include it in your theme.liquid
{% endcomment %}
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick.css"/>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick-theme.css"/>

<!-- Add before the closing </body> tag -->
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick.min.js"></script>

{% comment %}
  Create a new section file in your Shopify theme, e.g., sections/reviews-slider.liquid
{% endcomment %}
<section class="reviews-sec section-{{ section.id }}-padding">
  <div class="page-width section-{{ section.id }}">
    <div class="review-main">
      <div class="review">
        <h2 class="review-head">
          {{ section.settings.review_heading }}
        </h2>
        <p>{{ section.settings.review_description }}</p>
      </div>
      <div class="review-slider">
        {% for block in section.blocks %}
          <div class="review-bg">
            <div class="review-card-inner">
              <div class="stars">
              </div>
              <h4 class="review-card-head">{{ block.settings.review_text }}</h4>
            </div>
            <div class="product">
              <div class="product-img">
                <img src="{{ block.settings.product_image | img_url: 'medium' }}" alt="{{ block.settings.author_name }}" />
              </div>
              <div class="product-right">
                <p class="author">{{ block.settings.author_name }}</p>
                <p class="des">About <a href="{{ block.settings.product_link }}" class="des-link">{{ block.settings.product_name }}</a></p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <a href="{{ section.settings.button_link }}" class="bio-btn">
        <span>{{ section.settings.button_text }}</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M2 8H14M14 8L8 2M14 8L8 14" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  $(document).ready(function(){
    $('.section-{{ section.id }} .review-slider').slick({
        dots: false,
        infinite: false,
        speed: 500,
        slidesToShow: 3,
        slidesToScroll: 1,
        autoplay: false,
        autoplaySpeed: 3000,
        prevArrow: '<button class="slick-prev slick-arrow" aria-label="Previous" type="button"> <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M13.75 17.5L6.25 10L13.75 2.5" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg></button>',
        nextArrow: '<button class="slick-next slick-arrow" aria-label="Next" type="button"><svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M6.25 17.5L13.75 10L6.25 2.5" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg></button>',
    });
  });
</script>

{% schema %}
{
  "name": "Reviews Slider",
  "settings": [
    {
      "type": "text",
      "id": "review_heading",
      "label": "Review Heading",
      "default": "7000+ Verified 5-Star Reviews"
    },
    {
      "type": "textarea",
      "id": "review_description",
      "label": "Review Description",
      "default": "Norem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Find Your Bio-K+"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "textarea",
          "id": "review_text",
          "label": "Review Text",
          "default": "Norem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
        },
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name",
          "default": "John P."
        },
        {
          "type": "text",
          "id": "product_name",
          "label": "Product Name",
          "default": "Dairy Active Shot"
        },
        {
          "type": "url",
          "id": "product_link",
          "label": "Product Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
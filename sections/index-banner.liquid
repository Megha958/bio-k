      "settings": [
        {
          "type": "text",
          "id": "card_number",
          "label": "Card Number",
          "default": "01"
        },
        {
          "type": "text",
          "id": "card_text",
          "label": "Card Text",
          "default": "Lacticaseibacillus Casei LBC80RÂ®"
        },
        {
          "type": "text",
          "id": "card_class",
          "label": "Card Class",
          "default": "first"
        }
      ]
    },
    {
        "type": "faq",
        "name": "FAQ",
        "settings": [
          {
            "type": "image_picker",
            "id": "faqicon",
            "label": "icon"
         },
          {
            "type": "text",
            "id": "question",
            "label": "Question"
          },
          {
            "type": "textarea",
            "id": "answer",
            "label": "Answer"
          }
        ]
      }
  ],
  "presets": [
    {
      "name": "Power Section Image banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}